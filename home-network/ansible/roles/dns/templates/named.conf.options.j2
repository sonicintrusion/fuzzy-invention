acl goodclients {
	localhost;
	localnets;
};

options {
	directory "/var/cache/bind";

	recursion yes;
	allow-query { goodclients; };

	forwarders {
		{{ isp.dn1 }}
		{{ isp.dn2 }}
		{{ alias.router }};
	 };
	forward only;

	dnssec-enable no;
	dnssec-validation no;

	auth-nxdomain no;    # conform to RFC1035
	listen-on-v6 { any; };
};